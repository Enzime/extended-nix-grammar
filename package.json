{
    "name": "nix-ext",
    "displayName": "Nix-ext",
    "description": "Extends Nix",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "grammars": [
            {
                "language": "nix",
                "scopeName": "source.nix",
                "path": "./syntaxes/nix.tmLanguage.json"
            },
            {
                "scopeName": "ext-multiline-html.injection",
                "path": "./syntaxes/ext-lang-injection.json",
                "injectTo": ["source.nix"],
                "embeddedLanguages": {
                    "meta.embedded.block.html": "html"
                }
            }
        ]
    }
}
